@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<style>
    body {
        background: url('https://blog.dktcdn.net/files/kho-hang.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
    }

    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        background: #fff;
    }

    .card-header {
        background: linear-gradient(90deg, #232526 0%, #414345 100%);
        color: #fff;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        text-align: center;
        padding: 1.5rem 1rem;
    }

    .card-body {
        padding: 2rem;
    }

    .form-floating > .form-control,
    .form-floating > label {
        border-radius: 0.5rem;
    }

    .form-control {
        background-color: #f8f9fa;
        color: #232526;
        border: 1px solid #ced4da;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #232526;
            box-shadow: 0 0 0 0.2rem rgba(35, 37, 38, 0.1);
            background-color: #fff;
        }

    .form-label {
        color: #232526;
    }

    .btn-primary {
        background: linear-gradient(90deg, #232526 0%, #414345 100%);
        border: none;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: background 0.2s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #414345 0%, #232526 100%);
        }

    .text-danger {
        color: #BA1414 !important;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="mb-0">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3" role="alert"></div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
