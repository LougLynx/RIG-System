@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background: url('https://blog.dktcdn.net/files/kho-hang.jpg') no-repeat center center fixed;
        background-size: cover;
        min-height: 100vh;
    }

    .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
        background: #fff;
    }

    .card-header {
        background: linear-gradient(90deg, #232526 0%, #414345 100%);
        color: #fff;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        text-align: center;
        padding: 1.5rem 1rem;
    }

    .card-body {
        padding: 2rem;
    }

    .form-floating > .form-control,
    .form-floating > label {
        border-radius: 0.5rem;
    }

    .form-control {
        background-color: #f8f9fa;
        color: #232526;
        border: 1px solid #ced4da;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #232526;
            box-shadow: 0 0 0 0.2rem rgba(35, 37, 38, 0.1);
            background-color: #fff;
        }

    .form-label {
        color: #232526;
    }

    .btn-primary {
        background: linear-gradient(90deg, #232526 0%, #414345 100%);
        border: none;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: background 0.2s;
    }

        .btn-primary:hover {
            background: linear-gradient(90deg, #414345 0%, #232526 100%);
        }

    .form-check-label {
        color: #232526;
    }

    .text-danger {
        color: #BA1414 !important;
    }

    .links a {
        color: #414345;
        text-decoration: none;
        transition: color 0.2s;
    }

        .links a:hover {
            color: #BA1414;
            text-decoration: underline;
        }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header">
                    <h3 class="mb-0">Log in</h3>
                </div>
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="dmvn12345" />
                            <label asp-for="Input.UserName" class="form-label">Employee Code</label>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" type="password" />
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="d-grid">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
                        </div>
                        <div class="mt-4 links text-center">
                            <div style="display: flex; justify-content: center; gap: 2rem;">
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot password</a>
                                <span>|</span>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register account</a>
                            </div>
                            <div class="mt-2">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
