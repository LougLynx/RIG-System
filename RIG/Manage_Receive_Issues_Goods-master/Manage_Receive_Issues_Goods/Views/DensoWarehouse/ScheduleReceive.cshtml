@model IEnumerable<Manage_Receive_Issues_Goods.Models.Planritddetail>

@{
    ViewData["Title"] = "RECEIVED Goods Schedule (Denso)";
    var planDetails = Json.Serialize(Model);
    Console.WriteLine(planDetails);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/custom.css">
</head>
<body>
    <div style="display: flex; gap: 10px;">
        <a class="nav-link btn btn-dark" asp-area="" asp-controller="DensoWarehouse" asp-action="ScheduleReceive">Received</a>
        <a class="nav-link btn btn-dark" asp-area="" asp-controller="DensoWarehouse" asp-action="ScheduleIssued">Issued</a>
        <a class="nav-link btn btn-dark" asp-area="" asp-controller="RITD" asp-action="ChangePlan">Plan</a>
    </div>

    <!-- Title with Real-time Clock -->
    <i> <h1 class="center-align"><span id="currentTime"></span></h1> </i>

    <!-- Calendar -->
    <div id='calendar'></div>

    <!-- Modal -->
    <div class="modal fade" id="eventModal" tabindex="-1" aria-labelledby="eventModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventModalLabel">Chi tiết lịch trình</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="eventDetails"></p>
                    <table id="stagesTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Giai đoạn</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Table content will be dynamically generated -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @* <script>
        var planDetails = @Html.Raw(planDetailsJson);
    </script *@>
    <script src="~/js/calendarReceiveDenso.js"></script>
</body>
</html>
