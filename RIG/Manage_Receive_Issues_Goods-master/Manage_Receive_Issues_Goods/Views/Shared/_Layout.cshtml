    <script src="~/js/_layout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <link rel="stylesheet" href="~/css/layout.css">
 </head>
<body onload="checkSidebarState(); highlightActiveLink();">
    <div id="mySidebar" class="sidebar">
        <h1 class=" text-light"><b><i>DENSO</i> <br>Manage RIG</b></h1>

        <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a class="nav-link text-light" asp-area="" asp-controller="TLIPWarehouse" asp-action="ScheduleReceive">TLIP</a>
        <a class="nav-link text-light" asp-area="" asp-controller="DensoWarehouse" asp-action="ScheduleReceive">Denso</a>
    </div>

    <div id="main">
        <button class="openbtn" onclick="toggleNav()">☰ </button>
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2"><b>@ViewData["Title"]</b></h1>
        </div>
        @RenderBody()
    </div>
</body>
</html>
